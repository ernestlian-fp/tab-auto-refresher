{
    "manifest_version": 3,
    "name": "Ernie's Auto-Refresher",
    "version": "1.0",
    "description": "Refresh tabs.",
    "permissions": ["tabs", "activeTab"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "icon16.png"
    }
  }
  